extend layouts/main
block content
  h2.well Super User Register Admin User

  form#register(action="" method="POST")
    .form-group
      label(for="adminname") Admin User Name:
      input(id="adminname" name="adminname" type="text" class="form-control")

    .form-group
      label(for="adminpassword") Admin User Password: 
      p.form-control-static initial password is #{defaultValue},do not forgot reset it at the first login time !
    button(type="submit" class="btn btn-default") Submit
