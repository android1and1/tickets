extends ../layouts/main.pug
block content 
  h1 form has 2 common fields and 1 file field.
block footer 
  form(class="form-horizontal" enctype="multipart/form-data" id="theform" action="" method="post")
    .form-group
      label(class="control-label col-sm-4" for="field1" ) Input Field:
      .col-sm-8
        input(type="text" placeholder="you input.." class="form-control" name="field1" id="field1")
    .form-group
      label(class="control-label col-sm-4" for="field2" ) TextArea Field:
      .col-sm-8
        textarea(placeholder="input area .." class="form-control" name="field2" rows="1" id="field2")
    .form-group
      label(class="control-label col-sm-4" for="filefield" ) Choice File:
      .col-sm-8
        input(type="file" id="filefield" name="choicefile" multiple="1" class="form-control") 
    .form-group
      .col-sm-10.col-sm-offset-2
        button(type="submit" class="btn btn-default") Submit!
         
