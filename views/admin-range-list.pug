extend layouts/main
block content
  include  widgets/tickets-common-navigator.pug
  h4.display-4 &nbsp;
  h4.text-center.display-4.text-success Range List
  if error
    h3.my-4.p-2.border.bg-dark.text-center.text-warning= error
  if thelist
    .list-group.list-group-flush
      each item in thelist
        a.list-group-item.list-group-item-action(href= '/admin/get-ticket-by-id/' + item.ticket_id,alt="ticket item") 
          .d-flex.w-100.justify-content-between
            h5.mb-2 第#{item.ticket_id}号文章
            span.badge.badge-success #{item.visits}
          h4.text-center.mb-1.text-warning 《#{item.title}》
          small.bd-highlight 写于 #{item.client_time}
          blockquote.mt-3
            p #{item.ticket.split("\r\n")[0]}

